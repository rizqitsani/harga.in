<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonPrimary">
        <item name="backgroundTint">@color/primary_50</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="buttonSecondary">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary_50</item>
        <item name="strokeColor">@color/primary_50</item>
        <item name="strokeWidth">0.75dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textStyle">bold</item>

    </style>
    
    <style name="progressBarPrimary">
        <item name="android:visibility">invisible</item>
        <item name="android:elevation">20dp</item>
        <item name="android:indeterminateTint">@color/primary_30</item>
    </style>


    <!--  belum dipakai  -->
    <style name="TextAppearance.Hargain.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <style name="TextAppearance.Hargain.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
</resources>